betcalc = 0.39
basebet = balance * (betcalc / 1000000)
chance1    = math.random (83.5,85.5) 
chance2    = math.random (33, 35)
multiplier = 1.6
chance     = chance1
nextbet     = basebet
bethigh     = true
counter     = 0
wincount    = 0
totalloss   = 0
initbalance = balance
tp = balance + 120 -- target
sl = balance - 100 -- stop loss
function dobet()
    counter += 1
    print("Bet Amount :"..string.format("%.8f",nextbet))
    if counter == 25 then
    print(" ")
        print("Profit :"..string.format("%.8f",profit))
        print(" ")
        print("Current Balance : "..string.format("%.8f",balance))
        print(" ")
        counter = 0
    end
    if ((chance == chance2) and win) then
        initbalance = balance
        totalloss   = 0
    end
    if win then
        nextbet = basebet
        wincount += 1
        bethigh = true
        chance  = chance1
        if initbalance > balance then
           totalloss = initbalance - balance 
        end        
       if wincount > 10 then
           chance = chance2
            nextbet  = basebet+(totalloss/2)
            bethigh  = false
            wincount = 0
        end 
    end
    if !win then
        wincount = 0
        if (chance == chance2) then
                nextbet = previousbet*multiplier
        end
   if balance > tp then stop() end
   if balance - nextbet < sl then stop() end
    end
end -- <<END OF DOBET>>
