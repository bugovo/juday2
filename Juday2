betcalc = 0.39

-------------------------------------------
nextbet = 0.000005

chance = 95

basebet = balance * (betcalc / 1000000)

bethigh = true

losecount = 0

target = 1000 -- Doge
tprofit = balance + target


function dobet()


    if(balance >= tprofit) then ---stop()
print("Profit tercapai")


end
function gettime()
time       = os.date("*t") 
timenow    = time.hour
timenowm   = time.min
if timenow ==0 then
timenow    = 24
end
end

function sctime()
if timenow <= 12 and timenow >= 1 then
pagi=true
sore=false
malam=false
elseif timenow <=18 and timenow >=12 then
sore=true
pagi=false
malam=false
elseif timenow <=24 and timenow >=18 then
malam=true
pagi=false
sore=false
end
end

function changesc()
if pagi then
if !pagidone then
settingpagi()
pagidone=true
soredone=false
malamdone=false
end
scpagi()
print("Script running: SC PAGI")
stats()
end
if sore then
if !soredone then
settingsore()
pagidone=false
soredone=true
malamdone=false
end
scsore()
print("Script running: SC SORE")
stats()
end
if malam then
if !malamdone then
settingmalam()
pagidone=false
soredone=false
malamdone=true
end
scmalam()
print("Script running: SC MALAM")
stats()
end
end

function waitnextsc()
print("STOP JAM "..timenow..":"..timenowm)
if pagi then
nextsctime=((12-timenow)*3600)+((60-timenowm)*60)
pagidone=false
print("MULAI LAGI JAM 12.00 SIANG")
end
if sore then
nextsctime=((18-timenow)*3600)+((60-timenowm)*60)
soredone=false
print("MULAI LAGI JAM 18.00 SORE")
end
if malam then
nextsctime=((24-timenow)*3600)+((60-timenowm)*60)
malamdone=false
print("MULAI LAGI JAM 01.00 PAGI")
end
sleep(nextsctime)
end
